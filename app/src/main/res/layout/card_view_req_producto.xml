<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/lengua" />

        <TextView
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="Queque"
            android:textSize="13sp"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="5dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CÃ³digo:"
                />
            <TextView
                android:paddingRight="5dp"
                android:textSize="10sp"
                android:id="@+id/txtCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CA12TNOT"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cardviewMenos"
                android:layout_width="@dimen/productos_cardView_height_width"
                android:layout_height="@dimen/productos_cardView_height_width"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.15"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>


            <EditText
                android:id="@+id/txtCantidad"
                android:layout_width="@dimen/productos_cardView_height_width"
                android:layout_height="@dimen/productos_cardView_height_width"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.7"
                android:background="@drawable/forma_redonda_edit_text"
                android:elevation="4dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#767676"
                android:textCursorDrawable="@null" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardviewMas"
                android:layout_width="@dimen/productos_cardView_height_width"
                android:layout_height="@dimen/productos_cardView_height_width"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.15"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
