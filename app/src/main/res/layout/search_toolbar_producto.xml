<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_producto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:visibility="gone"
    tools:showIn="@layout/app_bar_referencia">


    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:hint="Buscar... "
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="@dimen/search_view_padding_searchToolbar"
        android:paddingRight="@dimen/search_view_padding_searchToolbar"
        android:textColor="@color/searchTextColor_searchToolbar"
        android:textColorHint="@color/searchHintColor_searchToolbar"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/ic_arrowBack"
        style="@style/searchToolbar_imageButtonStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back" />

    <ImageButton
        android:id="@+id/ic_clear"
        style="@style/searchToolbar_imageButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ic_barcode_scan"
        style="@style/searchToolbar_imageButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_barcode_scan"
        android:visibility="visible" />


</RelativeLayout>