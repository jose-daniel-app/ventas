<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ventas.views.ProductosFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.github.clans.fab.FloatingActionMenu
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floating_actionMenu"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:menu_showShadow="true"
        app:menu_fab_label=""
        app:menu_openDirection="up"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_colorNormal="@color/accent2"
        app:menu_colorPressed="@color/primary_light"
        app:menu_labels_colorNormal="@color/accent"

        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_actionButton1"
            android:src="@drawable/ic_description_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Accion 1"
            app:fab_size="mini"
            app:fab_colorNormal="@color/accent"
            app:fab_colorPressed="@color/primary_light"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_actionButton2"
            android:src="@drawable/ic_check_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Accion 2"
            app:fab_size="mini"
            app:fab_colorNormal="@color/accent"
            app:fab_colorPressed="@color/primary_light"
            />

    </com.github.clans.fab.FloatingActionMenu>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <android.support.v7.widget.SearchView
                android:autofillHints="buscar"
                android:layout_gravity="center"
                app:searchIcon="@drawable/ic_search_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

            </android.support.v7.widget.SearchView>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listaPro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="true"

                />


        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>