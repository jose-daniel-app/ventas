<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ventas.views.BoletaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:text="Epresa Ventas comenrcial S.A.C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="A.v Victor Andres belaunde Nr 147 INT 301"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="San Isidro - Lima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Ruc." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20503840121" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Boleta de Ventas Torres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="11/11/2018"
                    android:layout_weight="0.33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:text="04:27 pm"
                    android:layout_weight="0.33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right"
                    android:text="B909-342134"
                    android:layout_weight="0.33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Cliente."
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jose Garcia Peceros" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/headDetalleBoleta"
                    android:text="CANT"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/headDetalleBoleta"
                    android:text="DESCRIPCIÃ“N"
                    android:layout_weight="0.50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/headDetalleBoleta"
                    android:gravity="right"
                    android:text="P.UNIT"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/headDetalleBoleta"
                    android:gravity="right"
                    android:text="IMPORTE"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:fadeScrollbars="false"
                android:id="@+id/recyclerViewITemBoleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    style="@style/headDetalleBoleta"
                    android:gravity="right"
                    android:text="TOTAL"
                    android:layout_weight="0.80"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/headDetalleBoleta"
                    android:gravity="right"
                    android:text="S/ 200"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButonContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="14dp"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            android:src="@drawable/ic_check_white"
            app:fab_size="mini" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>